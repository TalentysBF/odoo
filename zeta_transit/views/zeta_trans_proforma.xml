<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="zeta_trans_proforma" model="ir.ui.view">
            <field name="name">zeta_trans_proforma</field>
            <field name="model">zeta.trans.proforma</field>
            <field name="arch" type="xml">
			<form>
				<header>
                        <button string="Actualiser" type="object" name="actualiser" class="oe_highlight"/>
				</header>
				<sheet>
					<div class="oe_button_box" name="button_box">
					</div>
					<group>
						<field name="name"/>
						<field name="res_client" invisible="1"/>
						<field name="str_minute"/>
						<field name="ref_p_f" invisible="1"/>
						<field name="ref_f_f" invisible="1"/>
					</group>

					<group>
						<group>
							<field name="designation" style="text-transform: uppercase;"/>
						</group>
						<group>
							<field name="qte"/>
							<field name="colis"/>
							<field name="poids_brut"/>
							<field name="poids_net"/>
							<field name="forme_j" invisible="1"/>
							<field name="regime_i" invisible="1"/>
							<field name="domiciliation_f" invisible="1"/>
						</group>
						<group>
							<field name="valeur_caf"/>
							<field name="valeur_mercurial"/>
						</group>
						<group>
							<field name="transport" style="text-transform: uppercase;"/>
						</group>
					</group>
					<group>
						<group>
						<label for="d_t_d" string="Droits et Taxes Douane" style="white-space: nowrap;"/>
						<div class="address_format">
							<field name="d_t_d"/>
						</div>
							<field name="t_v_a"/>
							<field name="b_i_c"/>
						</group>
						<group>
							<label for="t_a_f" string="Total Avance de Fonds" style="white-space: nowrap;"/>
							<div>
								<field name="t_a_f"/>
							</div>
						</group>
					</group>
					<group>
						<group>
							<field name="t_s_ecor"/>
							<field name="vaccation"/>
							<field name="assurance"/>
							<field name="bool_assurance" invisible="1"/>
							<label for="p_m_d" string="Passage Mag/Douane TVA" style="white-space: nowrap;"/>
							<div>
								<field name="p_m_d"/>
							</div>
							<field name="t_v_a_d_1"/>
							<label for="camionage" string="Camionage Manutention" style="white-space: nowrap;"/>
							<div>
								<field name="camionage"/>
							</div>
						</group>
						<group>
							<field name="rem_doc_nom"/>
							<field name="rem_doc"/>
							<field name="d_d_u"/>
							<field name="facture_mnt"/>
							<field name="facture" invisible="1"/>
							<field name="stationement"/>
							<field name="t_v_a_d_2"/>
							<label for="d_f_g" string="Douane Fonds de Garantie" style="white-space: nowrap;"/>
							<div>
								<field name="d_f_g"/>
							</div>
							<field name="divers_debours"/>
						</group>
						<group>
							<field name="total_debours"/>
						</group>
					</group>
					<group>
						<group>
							<field name="ouverture"/>
							<field name="imprime"/>
							<field name="h_a_d"/>
							<field name="real_had" invisible="1"/>
							<field name="remise_had" invisible="1"/>
							<label for="commission_a" string="Commission/Avance de Fonds" style="white-space: nowrap;"/>
							<div>
								<field name="commission_a"/>
							</div>
							<label for="commission_t" string="Commission de transit" style="white-space: nowrap;"/>
							<div>
								<field name="commission_t"/>
							</div>
							<field name="commission_d"/>
							<field name="divers_inter"/>
						</group>
						<group>
							<label for="total_int" string="Total Interventions HT" style="white-space: nowrap;"/>
							<div>
								<field name="total_int"/>
							</div>
							<field name="t_v_a_int"/>
							<label for="total_ttc" string="Total Interventions TTC" style="white-space: nowrap;"/>
							<div>
								<field name="total_ttc"/>
							</div>
							<field name="nom_client" invisible="1"/>
							<field name="boite_postal" invisible="1"/>
							<field name="address_cadastrale" invisible="1"/>
							<field name="ifu" invisible="1"/>
							<field name="telephone" invisible="1"/>
							<field name="fax" invisible="1"/>
							<field name="rccm" invisible="1"/>
							<field name="code_proforma" invisible="1"/>
						</group>
					</group>
					<group>
						<group>
							<field name="n_a_p" style="font-weight: bold;color: #7c7bad; font-weight: bold; font-size: 18px;"/>
						</group>
						<group>
							<field name="note" style="text-transform: uppercase;"/>
							<field name="condition_vente"/>
						</group>
					</group>
				</sheet>
			</form>
            </field>
        </record>

	<record id="zeta_tree_trans_proforma" model="ir.ui.view">
		<field name="name">Proforma Tree</field>
		<field name="model">zeta.trans.proforma</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
				<field name="str_minute"/>
			</tree>
		</field>
	</record>
	<record id="zeta_filter_trans_proforma" model="ir.ui.view">
		<field name="name">Proforma Filter</field>
		<field name="model">zeta.trans.proforma</field>
		<field name="arch" type="xml">
			<search>
				<field name="name"/>
				<field name="str_minute"/>
			</search>
		</field>
	</record>

	<record model="ir.actions.act_window" id="zeta_transit_proforma_action_window">
		<field name="name">Proforma</field>
		<field name="res_model">zeta.trans.proforma</field>
		<field name="view_mode">tree,form</field>
	</record>

	<record id="zeta_transit_facture_detail_action_window" model="ir.actions.act_window">
            <field name="name">Facture du Dossier</field>
            <field name="res_model">zeta.trans.facture</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="context">{'search_default_str_proforma': active_id}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Facture
              </p>
            </field>
	</record>

	<record id="zeta_trans_proforma_zeta_view_buttons" model="ir.ui.view">
            <field name="name">zeta.trans.proforma.view.buttons</field>
            <field name="model">zeta.trans.proforma</field>
            <field name="inherit_id" ref="zeta_trans_proforma" />
            <field name="priority" eval="18"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action" name="%(zeta_transit_facture_detail_action_window)d"
							icon="fa-file-text">
                        <field string="Facture" name="test" widget="statinfo"/>
                    </button>
                </div>
            </field>
	</record>
		

</odoo>
