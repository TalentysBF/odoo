<?xml version="1.0" encoding="utf-8"?>
<odoo>

          <record model="ir.ui.view" id="talentys_caisse">
              <field name="name">talentys.caisse</field>
              <field name="model">talentys.caisse</field>
              <field name="arch" type="xml">
                <form>
                  <header>
                    <button string="Ouvrir"  type="object" name="button_open" states="draft"  class="oe_highlight"/>
          					<button name="button_fermer" states="ouvert" string="Fermer" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,ouvert,fermer" statusbar_colors='{"draft":"blue"}'/>
          				</header>
                  <sheet>
                    <group>
                      <group>
                        <field name="responsable" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="ouverture" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="fermeture" attrs="{'readonly': [('state', '!=', 'ouvert')]}"/>
                        <field name="str_bureau" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                      </group>
                    </group>
                    <notebook>
                          <page name="transactions" string="Transactions">
                            <field name="lines_id" attrs="{'readonly': [('state', '!=', 'ouvert')]}">
                              <tree>
                                <field name="name"/>
                                <field name="motif"/>
                                <field name="genre"/>
                                <field name="montant"/>
                              </tree>
                              <form>
                                <sheet>
                                  <group>
                                    <group>
                                      <field name="name"/>
                                      <field name="motif"/>
                                    </group>
                                    <group>
                                      <field name="genre"/>
                                      <field name="montant"/>
                                    </group>
                                  </group>
                                </sheet>
                              </form>
                            </field>
                          </page>
                    </notebook>
                  </sheet>
                </form>
             </field>
          </record>


          <record id="talentys_caisse_tree" model="ir.ui.view">
            <field name="name">Talentys Caisse Tree</field>
            <field name="model">talentys.caisse</field>
            <field name="arch" type="xml">
              <tree>
                <field name="responsable"/>
                <field name="ouverture" string="Ouverture" sum="Ouverture"/>
                <field name="d_ouverture"/>
                <field name="fermeture" string="Fermeture" sum="Fermeture"/>
                <field name="d_fermeture"/>
                <field name="state"/>
              </tree>
            </field>
          </record>


          <record id="talentys_caisse_trans_tree" model="ir.ui.view">
            <field name="name">Talentys Caisse Tree</field>
            <field name="model">talentys.caisse.line</field>
            <field name="arch" type="xml">
              <tree>
                <field name="name"/>
                <field name="genre"/>
                <field name="d_transaction"/>
                <field name="montant"/>
              </tree>
            </field>
          </record>


          <record id="talentys_caisse_filter" model="ir.ui.view">
            <field name="name">Talentys Caisser Filter</field>
            <field name="model">talentys.caisse</field>
            <field name="arch" type="xml">
              <search>
                <field name="responsable"/>
                <field name="d_ouverture"/>
                <field name="ouverture"/>
                <field name="fermeture"/>
                <field name="d_fermeture"/>
              </search>
            </field>
          </record>


          <record model="ir.actions.act_window" id="talentys_caisse_action_window">
            <field name="name">Caisse</field>
            <field name="res_model">talentys.caisse</field>
            <field name="view_mode">tree,form</field>
          </record>


          <record model="ir.actions.act_window" id="talentys_caisse_trans_action_window">
            <field name="name">Caisse Transactions</field>
            <field name="res_model">talentys.caisse.line</field>
            <field name="view_mode">tree,form</field>
          </record>


</odoo>
